# JWT Secret Key (REQUIRED for server mode)
# This key is used to sign authentication tokens
# IMPORTANT: Must be set to persist login sessions across server restarts
# Generate a secure random string (e.g., using: openssl rand -base64 32)
JWT_SECRET=your-secret-key-here-change-this-in-production

# Gin Mode (optional, default: release)
# Set to "debug" for development with detailed logging
# Options: debug, release, test
GIN_MODE=debug

# Encryption Key (REQUIRED for secrets management)
# Used to encrypt sensitive data (SSH passwords, env vars) in the database.
# Must be a 32-byte hex string (64 characters).
# Generate using: openssl rand -hex 32
# If not set, the application uses an insecure default for backward compatibility.
DEPLOYER_ENCRYPTION_KEY=your-64-char-hex-key-here

# PostgreSQL (local): if the server doesn't support TLS/SSL, add ?sslmode=disable to DATABASE_URL (development only)
DATABASE_URL=postgres://user:pass@host:5432/dbname

# TURSO  
TURSO_DATABASE_URL=libsql://your-db.turso.io
TURSO_AUTH_TOKEN=token

# SQLite (default, no config needed)
# ~/.deployer/deploy.db

# gin mode
GIN_MODE=debug
